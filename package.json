{
   "name": "kcs",
   "displayName": "Keyboard Cursors and Selections",
   "description": "It enables you to create arbitrary cursors and selections with the keyboard.",
   "version": "1.0.3",
   "publisher": "srares13",
   "repository": {
      "type": "git",
      "url": "https://github.com/srares13/keyboard-cursors-and-selections.git"
   },
   "icon": "images/KCS-icon.png",
   "engines": {
      "vscode": "^1.77.0"
   },
   "categories": [
      "Other"
   ],
   "keywords": [
      "cursor",
      "selection",
      "multi",
      "keyboard",
      "custom"
   ],
   "activationEvents": [],
   "main": "./bundle/extension.js",
   "contributes": {
      "commands": [
         {
            "command": "kcs.placeInactiveSelection",
            "title": "KCS: Place Inactive Selection"
         },
         {
            "command": "kcs.activateSelections",
            "title": "KCS: Activate Selections"
         },
         {
            "command": "kcs.removeInactiveSelections",
            "title": "KCS: Remove Inactive Selections"
         }
      ],
      "keybindings": [
         {
            "command": "kcs.placeInactiveSelection",
            "key": "pagedown",
            "when": "editorTextFocus"
         },
         {
            "command": "kcs.activateSelections",
            "key": "pageup",
            "when": "editorTextFocus"
         },
         {
            "command": "kcs.removeInactiveSelections",
            "key": "escape",
            "when": "editorTextFocus && inactiveSelections && !findWidgetVisible && !suggestWidgetVisible && !suggestWidgetMultipleSuggestions && !renameInputVisible && !referenceSearchVisible && !inReferenceSearchEditor && !quickFixWidgetVisible && !parameterHintsVisible && !parameterHintsMultipleSignatures && !editorHasSelection && !editorHasMultipleSelections && !notificationCenterVisible && !notificationToastsVisible"
         }
      ]
   },
   "scripts": {
      "lint": "eslint .",
      "pretest": "npm run lint",
      "vscode:prepublish": "node ./esbuild.js"
   },
   "devDependencies": {
      "esbuild": "~0.18.17",
      "eslint": "~8.36.0",
      "prettier": "~2.8.8"
   }
}
