{
   "name": "keyboardCursors",
   "displayName": "Keyboard Cursors",
   "description": "Add cursors to the document using the keyboard",
   "version": "1.4.4",
   "publisher": "bs-code",
   "repository": {
      "type": "git",
      "url": "https://github.com/srares13/keyboard-cursors-and-selections.git"
   },
   "icon": "images/KCS-icon.png",
   "engines": {
      "vscode": "^1.87.2"
   },
   "categories": [
      "Other"
   ],
   "keywords": [
      "cursor",
      "selection",
      "multi",
      "keyboard",
      "custom"
   ],
   "activationEvents": [],
   "main": "bundle/extension.js",
   "contributes": {
      "commands": [
         {
            "command": "keyboardCursor.placeInactiveSelection",
            "title": "Keyboard Cursor: Add Selection"
         },
         {
            "command": "keyboardCursor.activateSelections",
            "title": "Keyboard Cursor: Activate Selections"
         },
         {
            "command": "keyboardCursor.removeInactiveSelections",
            "title": "Keyboard Cursor: Remove Inactive Selections"
         },
         {
            "command": "keyboardCursor.undo",
            "title": "Keyboard Cursor: Undo"
         },
         {
            "command": "keyboardCursor.redo",
            "title": "Keyboard Cursor: Redo"
         }
      ],
      "keybindings": [
         {
            "command": "keyboardCursor.placeInactiveSelection",
            "key": "alt+enter",
            "when": "editorTextFocus"
         },
         {
            "command": "keyboardCursor.activateSelections",
            "key": "win+enter",
            "mac": "ctrl+enter",
            "when": "editorTextFocus"
         },
         {
            "command": "keyboardCursor.removeInactiveSelections",
            "key": "escape",
            "when": "editorTextFocus && inactiveSelections && !editorHasSelection && !editorHasMultipleSelections && !findWidgetVisible && !suggestWidgetVisible && !renameInputVisible && !referenceSearchVisible && !codeActionMenuVisible && !parameterHintsVisible && !notificationCenterVisible && !notificationToastsVisible"
         }
      ],
      "configuration": {
         "title": "keyboardCursor",
         "properties": {
            "keyboardCursor.cursorColor": {
               "type": "string",
               "description": "Default: #ee77a3",
               "default": "#ee77a3",
               "scope": "window",
               "format": "color-hex"
            },
            "keyboardCursor.selectionColor": {
               "type": "string",
               "description": "Default: #8c1a8e99\nNote that the default color for selections has transparency.",
               "default": "#8c1a8e99",
               "scope": "window",
               "format": "color-hex"
            },
            "keyboardCursor.inactiveSelectionsReactToDocumentEdits": {
               "type": "boolean",
               "description": "Experimental: When you make edits to the document, the inacitve selections will move across the document in accordance with those edits.",
               "default": true,
               "scope": "window"
            }
         }
      }
   },
   "scripts": {
      "lint": "eslint .",
      "pretest": "npm run lint",
      "vscode:prepublish": "node ./esbuild.js",
      "bundle": "node ./esbuild.js",
      "bundle-extension": "npm run bundle"
   },
   "devDependencies": {
      "@types/node": "^20.6.3",
      "@types/semver": "^7.5.3",
      "@types/vscode": "^1.82.0",
      "esbuild": "~0.18.17",
      "eslint": "~8.48.0",
      "eslint-config-prettier": "~9.0.0",
      "eslint-plugin-prettier": "~5.0.0",
      "prettier": "~3.0.3",
      "typescript": "^5.2.2"
   },
   "dependencies": {
      "marked": "^9.0.3",
      "semver": "~7.5.4",
      "vscode-position-tracking": "~0.1.0"
   }
}
